<script>
  function convertTextToNumbersAndDisplay() {
    // Create a map of letters to numbers.
    const letterToNumberMap = {
      "A": "0.1",
      "B": "0.2",
      "C": "0.3",
      "D": "0.4",
      "E": "0.5",
      "F": "0.6",
      "G": "0.7",
      "H": "1.2",
      "I": "1.3",
      "J": "4.6",
      "K": "1.4",
      "L": "1.5",
      "M": "1.6",
      "N": "1.7",
      "O": "2.3",
      "P": "2.4",
      "Q": "2.5",
      "R": "2.6",
      "S": "7.2",
      "T": "4.2",
      "U": "3.5",
      "V": "4.7",
      "W": "5.6",
      "X": "5.7",
      "Y": "3.6",
      "Z": "6.5",
    };

    // Get the plain text from the input element.
    const plainText = document.getElementById("plain-text").value.toUpperCase();
    const semaphoreNumbersOutput = document.getElementById("semaphore-numbers");

    // Convert the plain text to numbers.
    const numbers = Array.from(plainText).map(char => letterToNumberMap[char] || char).join(',');

    // If the conversion was successful, display the converted numbers in the semaphore numbers output element.
    if (numbers !== undefined) {
      // Display the converted numbers.
      semaphoreNumbersOutput.value = numbers;
      semaphoreNumbersOutput.style.color = "green";
    } else {
      // If the conversion was not successful, display an error message.
      semaphoreNumbersOutput.value = "Invalid input";
      semaphoreNumbersOutput.style.color = "red";
    }
  }

  // Add an event listener to the button to call the `convertTextToNumbersAndDisplay()` function.
  document.getElementById("TombolMulai").addEventListener("click", () => {
    // Convert the plain text to numbers and display the results.
    convertTextToNumbersAndDisplay();
  });
</script>




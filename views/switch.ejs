<script>
// Function to convert semaphore numbers to text and display the results
function convertNumbersToTextAndDisplay() {
  // Create a map of letters to numbers (reversed mapping).
  const numberToLetterMap = {
    "0.1": "A",
    "0.2": "B",
    "0.3": "C",
    "0.4": "D",
    "0.5": "E",
    "0.6": "F",
    "0.7": "G",
    "1.2": "H",
    "1.3": "I",
    "4.6": "J",
    "1.4": "K",
    "1.5": "L",
    "1.6": "M",
    "1.7": "N",
    "2.3": "O",
    "2.4": "P",
    "2.5": "Q",
    "2.6": "R",
    "7.2": "S",
    "4.2": "T",
    "3.5": "U",
    "4.7": "V",
    "5.6": "W",
    "5.7": "X",
    "3.6": "Y",
    "6.5": "Z",
  };

  // Get the semaphore numbers from the input element.
  const semaphoreNumbersInput = document.getElementById("semaphore-numbers").value;

  // Split the semaphore numbers and convert them to text.
  const numbersArray = semaphoreNumbersInput.split(",");
  const textArray = numbersArray.map((number) => numberToLetterMap[number] || number);

  // Join the text elements and convert to uppercase.
  const uppercaseText = textArray.join("").toUpperCase();

  // Get the plain text output element.
  const plainTextOutput = document.getElementById("plain-text");

  // Display the converted text in uppercase in the Plain Text output element.
  plainTextOutput.value = uppercaseText;
  plainTextOutput.style.color = "green";
}

// Add an event listener to the button to call the `convertNumbersToTextAndDisplay()` function.
document.getElementById("TombolMulai").addEventListener("click", () => {
  // Convert the semaphore numbers to text and display the results.
  convertNumbersToTextAndDisplay();
});


</script>



